<Window x:Class="Clone_Todomate.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clone_Todomate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox
            Text="{Binding UserProfileRepository.UserProfile.UserImagePath, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" Height="37" Margin="35,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox 
            Text="{Binding UserProfileRepository.UserProfile.UserName, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" Height="37" Margin="35,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox 
            Text="{Binding UserProfileRepository.UserProfile.UserDescription, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" Height="37" Margin="35,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="181"/>
        <Button
            Command="{Binding LoadCommand}"
            Content="Load" HorizontalAlignment="Center" Height="36" Margin="0,80,0,0" VerticalAlignment="Top" Width="186"/>
        <Button
            Command="{Binding SaveCommand}"
            Content="Save" HorizontalAlignment="Center" Height="36" Margin="0,155,0,0" VerticalAlignment="Top" Width="186"/>
        <Button
            Command="{Binding UpdateCommand}"
            Content="Update" HorizontalAlignment="Center" Height="36" Margin="0,212,0,0" VerticalAlignment="Top" Width="186"/>

    </Grid>
</Window>
